<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
<!--      <Properties> />-->

<!--          <Property name="app-logs-dir">/u02/eirdata/aggregated</Property> />-->
<!--      </Properties> />-->
    <Appenders>
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%C] %-5level - %msg%n"/>
        </Console>
        <RollingFile name="LogToFile"
                     fileName="${env:DATA_HOME}/logs/ra/agg.log"
                     filePattern="${env:DATA_HOME}/logs/ra/agg-%d{yyyy-MM-dd-HH-mm}-%i.log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%C] %-5level - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="200 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="200"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <!--        <Logger level="WARN" name="org.springframework" />-->
        <!--        <Logger level="WARN" name="org.jboss" />-->
        <!--        <Logger level="OFF" name="org.hibernate" />-->
        <!--        <Logger level="WARN" name="com.company.project.eligibility" />-->
        <Logger name="com.eagle.aggregator" level="info" additivity="false">
            <AppenderRef ref="LogToFile"/>
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="LogToFile"/>
            <AppenderRef ref="LogToConsole"/>
        </Root>

    </Loggers>
</Configuration>
